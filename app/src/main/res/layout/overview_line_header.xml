<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <LinearLayout
        android:id="@+id/line_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"

        android:orientation="vertical"
        android:theme="@style/AppTheme.SelectionRipple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03" />

            <TextView
                android:id="@+id/line_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="0.55"

                android:checked="true"
                android:gravity="center_vertical"

                android:text="Christopher Hoeflinger"
                android:textColor="@color/textColor"
                android:textSize="@dimen/bold_text_size"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03" />

            <TextView
                android:id="@+id/line_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="0.08"

                android:gravity="center"
                android:text="99"


                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03" />

            <TextView
                android:id="@+id/line_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="0.25"

                android:gravity="center_vertical"
                android:text="$99,999.99"
                android:textAlignment="textEnd"


                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03" />

        </LinearLayout>

        <View
            android:id="@+id/bottom_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/line_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
